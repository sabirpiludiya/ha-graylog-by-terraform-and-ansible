storage:
  dbPath: "{{ mongodb_dbpath }}"
  directoryPerDB: true
  engine: "{{ mongodb_storage_engine }}"
  journal:
{% if not mongodb_journal_enabled %}
    enabled: false
{% else %}
    enabled: true
{% endif %}
{% if mongodb_storage_engine == "wiredTiger" %}
  wiredTiger:
    engineConfig:
      directoryForIndexes: true
{% endif %}
net:
{% if mongodb_bind_ip is defined %}
  bindIp: {{ mongodb_bind_ip }}
{% endif %}
  port: {{ mongodb_port }}
  http:
    enabled: false
    JSONPEnabled: false
    RESTInterfaceEnabled: false
security:
{% if mongodb_authorization_enabled %}
  authorization: enabled
{% else %}
  authorization: disabled
{% endif %}
{% if not mongodb_enable_localhost_auth_bypass %}
setParameter:
  enableLocalhostAuthBypass: false
{% else %}
setParameter:
  enableLocalhostAuthBypass: true
{% endif %}
systemLog:
  destination: file
  path: "{{ mongodb_logpath }}"
  logAppend: true
  logRotate: reopen
  timeStampFormat: iso8601-utc
operationProfiling:
  slowOpThresholdMs: {{ mongodb_profiling_threshold }}
  mode: {{ mongodb_profiling_mode }}
